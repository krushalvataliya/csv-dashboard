    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('<?php echo $this->getUrl('FetchCsv'); ?>')
                .then(response => response.json())
                .then(data => {
                    const csvFilesList = document.getElementById('csv-files-list');
                    csvFilesList.innerHTML = '';

                    if (data.length === 0) {
                        csvFilesList.innerHTML = '<tr><td colspan="2">No CSV files found.</td></tr>';
                    } else {
                        data.forEach(file => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${file}</td>
                                <td>
                                    <button onclick="downloadCSV('${file}')">Download</button>
                                    <button class="delete" onclick="deleteCSV('${file}')">Delete</button>
                                </td>
                            `;
                            csvFilesList.appendChild(row);
                        });
                    }
                })
                .catch(error => console.error('Error fetching CSV files:', error));
        });

        function downloadCSV(filename) {
            window.location.href = '<?php echo $this->getUrl('download', null, [], true) ?>&file=' + filename;
        }

        function deleteCSV(filename) {
            if (confirm('Are you sure you want to delete this file?')) {
                fetch('<?php echo $this->getUrl('delete', null, [], true) ?>&file=' + filename)
                    .then(response => response.text())
                    .then(data => {
                        alert(data);
                        window.location.reload();
                    })
                    .catch(error => console.error('Error deleting CSV file:', error));
            }
        }
    </script>
