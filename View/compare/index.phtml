    <script>
        let allCsvFiles = [];

        function fetchSuggestions(inputElement, suggestionList, allCsvFiles) {
            const userInput = inputElement.value.trim().toLowerCase();
            suggestionList.innerHTML = '';

            if (userInput.length === 0) {
                return;
            }

            const filteredFiles = allCsvFiles.filter(filename =>
                filename.toLowerCase().includes(userInput)
            );

            filteredFiles.forEach(filename => {
                const li = document.createElement('li');
                li.textContent = filename;
                li.addEventListener('click', () => {
                    inputElement.value = filename;
                    suggestionList.innerHTML = '';
                });
                suggestionList.appendChild(li);
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            const url = '<?php echo $this->getUrl('fetchCsvSuggestions'); ?>';
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    allCsvFiles = data;
                })
                .catch(error => {
                    console.error('Error fetching CSV files:', error);
                });

            const csvFile1Input = document.getElementById('csvFile1');
            const suggestionList1 = document.getElementById('suggestionList1');
            csvFile1Input.addEventListener('input', () => {
                fetchSuggestions(csvFile1Input, suggestionList1, allCsvFiles);
            });

            const csvFile2Input = document.getElementById('csvFile2');
            const suggestionList2 = document.getElementById('suggestionList2');
            csvFile2Input.addEventListener('input', () => {
                fetchSuggestions(csvFile2Input, suggestionList2, allCsvFiles);
            });
        });
    </script>
